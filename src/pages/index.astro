---
import BaseHead from '~/components/BaseHead.astro'
import BaseStyles from '~/components/BaseStyles.astro'
import Contact from '~/components/Contact.astro'
import Footer from '~/components/Footer.astro'
import Hero from '~/components/Hero.astro'
import Research from '~/components/Research.astro'
import Twitter from '~/components/Twitter.astro'
import UnregisterSW from '~/components/UnregisterSW.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '~/config'
---

<!DOCTYPE html>
<html
  lang="en"
  class="h-full scroll-smooth bg-white antialiased [font-feature-settings:'ss01']"
>
  <head>
    <BaseStyles />
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="flex h-full flex-col">
    <Hero />
    <Research />
    <Contact />
    <Footer />
    <UnregisterSW />
  </body>
</html>
